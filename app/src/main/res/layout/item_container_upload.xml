<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/uploadDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="@color/primary"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        style="@style/BackgroundList"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageBook"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:tint="@color/primary"
                android:src="@drawable/ic_book"
                android:padding="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_icon"
                />
            <View
                android:id="@+id/bookSupport"
                android:layout_width="1dp"
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/courseCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                style="@style/textColorPrimaryBlack"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toEndOf="@+id/imageBook"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/semesterName"
                android:layout_marginStart="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/semesterName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_8ssp"
                />

            <TextView
                android:id="@+id/department"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="@id/courseCode"
                app:layout_constraintTop_toBottomOf="@id/courseCode"
                app:layout_constraintEnd_toStartOf="@id/statusApproved"
                />

            <TextView
                android:id="@+id/statusApproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textColor="@color/green"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@id/department"
                app:layout_constraintTop_toBottomOf="@id/courseCode"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="@string/approved"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/statusPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textColor="@color/primary"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@id/department"
                app:layout_constraintTop_toBottomOf="@id/courseCode"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="@string/pending"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/statusRejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintTop_toBottomOf="@id/courseCode"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="@string/rejected"
                android:visibility="invisible"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>