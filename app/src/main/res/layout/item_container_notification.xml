<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="33.33"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardPreventCornerOverlap="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notificationIcon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_notifications"
                android:padding="@dimen/_5sdp"
                />
            <TextView
                android:id="@+id/notificationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_1sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/notificationIcon"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/notificationMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_1sdp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@id/notificationTitle"
                app:layout_constraintTop_toBottomOf="@id/notificationTitle"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                android:textColor="@color/secondary_text"
                />
            <TextView
                android:id="@+id/notificationDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_1sdp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notificationDelete"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notificationDateTime"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_delete"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/background_round_and_white"
                android:visibility="invisible"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
